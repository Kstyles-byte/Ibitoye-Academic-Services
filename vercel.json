{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist", 
        "buildCommand": "npm run build:web"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "$1"
    },
    {
      "src": "/(.+\\..+)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 